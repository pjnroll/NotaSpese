<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llAggiuntaMovimento"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="8dp">
    <EditText
        android:id="@+id/txtAggiuntaDescrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrizione"/>

    <EditText
        android:id="@+id/txtAggiuntaData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AAAA/MM/GG" />

    <LinearLayout
        android:id="@+id/llAggiuntaMovimento1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.altervista.pierluigilaviano.notaspese.AggiuntaMovimento"
        android:weightSum="3">

        <EditText
            android:id="@+id/txtAggiuntaImporto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Importo"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="16dp" />
        <Button
            android:id="@+id/btnAggiungi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Aggiungi"/>
    </LinearLayout>
</LinearLayout>
